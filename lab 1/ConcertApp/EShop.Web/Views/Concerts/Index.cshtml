@model List<ConcertApp.Web.Models.Concert>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Concerts" asp-action="Create">Add new Concert</a>
    </div>

    @for(int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4"> 
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@item.ConcertImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.ConcertName</h5>
                    <p class="card-text">@item.ConcertDate</p>
                    <p class="card-text">@item.ConcertPlace</p>
                    <p class="card-text">@item.ConcertPrice</p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Concerts" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Concerts" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Concerts" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                </div>
            </div>
        </div>


        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>